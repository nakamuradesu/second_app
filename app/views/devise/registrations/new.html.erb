<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
       
        <%= render 'shared/error_messages', object: f.object %>
        <div class="field">
          <%= f.label :名前, class: "control-label" %>
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :メールアドレス, class: "control-label" %>
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>
       
        <div class="field">
          <%= f.label :住所, class: "control-label" %>
          <%= f.text_field :address, autofocus: true, class:"form-control" %>
        </div>
        
        <div class="field">
          <%= f.label :年齢, class: "control-label" %>
          <%= f.text_field :birthday, autofocus: true, class:"form-control" %>
        </div>
        
        <div class="field">
          <%= f.label :口座登録, class: "control-label" %>
          <%= f.text_field :bank_account, autofocus: true, class:"form-control" %>
        </div>
        
        <div class="field">
          <%= f.label :クレジット, class: "control-label" %>
          <%= f.text_field :credit, autofocus: true, class:"form-control" %>
        </div>
        
        <div class="field">
          <%= f.label :パスワード, class: "control-label" %>
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :パスワード確認, class: "control-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3 col-md-offset-3">
        <div class="actions">
          <%= f.submit "会員登録", class: "btn btn-lg btn-primary" %>
        </div>
    </div>
  </div>
<% end %>